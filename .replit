modules = ["nodejs-20", "web"]
run = "npm install && npm run dev"

[nix]
channel = "stable-25_05"
packages = ["php84Packages.cyclonedx-php-composer", "php"]

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[workflows]
runButton = "Laravel Backend"

[[workflows.workflow]]
name = "Laravel Backend"
author = 46450336
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd be && php artisan serve --host=0.0.0.0 --port=8000"
